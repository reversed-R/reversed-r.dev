---
import Tag from "./Tag.astro";
import URILink from "../utils/URILink.astro";

interface Props {
  title: string;
  uri: string;
  date: string;
  description: string | undefined;
  tags: string[] | undefined;
}

const { title, uri, date, description, tags } = Astro.props;
---

<article>
  <h1>{title}</h1>
  <h2>{date}</h2>

  <section>
    {tags?.map((tag) => <Tag text={tag} />)}
  </section>

  <section>
    {description && <p>{description}</p>}
  </section>

  <section>
    <URILink text="Read more ..." uri={uri} />
  </section>
</article>

<style>
  article {
    width: auto;
    background: var(--ya-black);
    color: var(--ya-green);
    margin: 1em;
    padding: 0.75em;
    border-radius: 1em;
    transition: 0.3s ease;
  }

  article:hover {
    transform: scale(1.03);
  }

  h1 {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }

  h2 {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }

  section {
    padding: 0.5em;
  }
</style>
