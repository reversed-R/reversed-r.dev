---
interface Props {
  text: string;
  uri?: string;
  class?: string;
}

const { text, uri, class: className = "" } = Astro.props;
---

<span class={`default-style ${className}`}>
  <a href={uri}>
    {text}
  </a>
</span>

<style>
  span {
    display: inline-block;
    background: var(--ya-less-darker-green);
    color: black;
    margin: 0.2em;
    font-size: 1em;
    padding-left: 0.2em;
    padding-right: 0.2em;
    border-radius: 0.2em;
  }

  span:hover {
    background: var(--hover);
    color: black;
  }

  span.selected {
    background: var(--hover);
  }
</style>
