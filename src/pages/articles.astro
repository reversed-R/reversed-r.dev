---
import { getCollection } from 'astro:content';
const articles = await getCollection('articles');
---
<html lang="ja">
  <head>
    <title>Articles</title>
  </head>
  <body>
    <h1>Articles</h1>
    <ul>
      {articles.map((article) => (
        <li>
          <a href={`/articles/${article.slug}/`}>{article.data.title}</a>
        </li>
      ))}
    </ul>
  </body>
</html>

